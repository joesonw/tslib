{
  "name": "@joesonw/tslib",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint './src//**/*.ts?(x)'",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register src/**/*.test.ts",
    "coverage": "nyc yarn test"
  },
  "nyc": {
    "cache": false,
    "check-coverage": false,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html",
      "text",
      "json"
    ],
    "instrument": true,
    "all": true  
  },
  "author": "Qiaosen Huang",
  "license": "MIT",
  "dependencies": {
    "@types/q": "^1.5.4",
    "q": "^1.5.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.24",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "chai": "^4.2.0",
    "eslint": "^7.5.0",
    "eslint-plugin-import": "^2.22.0",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  }
}
